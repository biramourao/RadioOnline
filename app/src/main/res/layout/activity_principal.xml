<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bira.radio.principal">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_play"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        tools:text="@string/button_play"
        android:layout_below="@+id/button_play"
        android:layout_alignEnd="@+id/button_play"
        android:layout_marginEnd="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="14dp"
        android:text="@string/button_stop"
        android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
        tools:text="@string/button_stop"
        android:layout_below="@+id/button_stop"
        android:layout_alignEnd="@+id/button_stop" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        app:srcCompat="@drawable/logo1"
        tools:ignore="ContentDescription"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/button_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:background="@android:color/transparent"
        android:contentDescription="@string/button_play"
        app:srcCompat="@drawable/play"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="288dp"
        android:layout_below="@+id/cVolume"
        android:layout_alignStart="@+id/cVolume"
        android:layout_marginTop="19dp" />

    <ImageButton
        android:id="@+id/button_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:contentDescription="@string/button_stop"
        app:srcCompat="@drawable/stop"
        android:layout_alignTop="@+id/button_play"
        android:layout_alignEnd="@+id/cVolume" />

    <SeekBar
        android:id="@+id/cVolume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/texto_barra_volume"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3" />

    <TextView
        android:id="@+id/texto_barra_volume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/barra_volume"
        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

</RelativeLayout>
